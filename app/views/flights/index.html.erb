<p id="notice"><%= notice %></p>

<h1>Listing Flights</h1>

<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Departure airport</th>
      <th>Arrival airport</th>
      <th>Departure time</th>
      <th>Arrival time</th>
      <th>Flight status</th>
      <th>Rev departure time</th>
      <th>Rev arrival time</th>
      <th>Is delete</th>
      <th>Created at</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.departure_airport %></td>
        <td><%= flight.arrival_airport %></td>
        <td><%= flight.departure_time %></td>
        <td><%= flight.arrival_time %></td>
        <td><%= flight.flight_status %></td>
        <td><%= flight.rev_departure_time %></td>
        <td><%= flight.rev_arrival_time %></td>
        <td><%= flight.is_delete %></td>
        <td><%= flight.created_at %></td>
        <td><%= flight.price %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

