<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Flight</th>
      <th>Pnr</th>
      <th>Price</th>
      <th>Booking status</th>
      <th>Nominee mobile</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.name %></td>
        <td><%= booking.email_id %></td>
        <td><%= booking.mobile %></td>
        <td><%= booking.flight_id %></td>
        <td><%= booking.pnr %></td>
        <td><%= booking.price %></td>
        <td><%= booking.booking_status %></td>
        <td><%= booking.nominee_mobile %></td>
        <td><%= booking.created_at %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

